{% extends 'base.html.twig' %}

{% block title %}Reset password
{% endblock %}


{% block header %}
	<div class="container pt-3">
		<div class="d-flex text-center justify-content-center">
			<h1>Changer votre mot de passe<h1></div>
			</div>
		</div>
	{% endblock %}


	{% block section %}
		<div class="container pt-4" id="header">
			<div class="d-flex flex-column text-center justify-content-center">

				{% for message in app.flashes('failed') %}
					<div class="row">
						<div class="col-12 alert alert-danger text-center">
							{{ message }}
						</div>
					</div>
				{% endfor %}

				{{ form_start(form) }}
				<div class="pt-4">
					{{ form_label(form.plainPassword.first,'Password') }}
				</div>
				<div class="">
					{{ form_errors(form.plainPassword.first)}}
				</div>
				<div class="">
					{{ form_widget(form.plainPassword.first, {'attr': {'class': 'border_input'}}) }}
				</div>
				<div class="pt-4">
					{{ form_label(form.plainPassword.second,'Confirm password') }}
				</div>
				<div class="">
					{{ form_errors(form.plainPassword.second)}}
				</div>
				<div class="">
					{{ form_widget(form.plainPassword.second, {'attr': {'class': 'border_input'}}) }}
				</div>

				<div class="pt-5 pb-1">
					<button type="submit" class="btn btn-primary">Changer votre mot de passe</button>
				</div>
				{{ form_end(form)}}
			</div>
		</div>
	{% endblock %}

