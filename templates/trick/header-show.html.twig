<div class="container"  > 
	
			{% if trick.image[0].source != false %}
			<div class="col-12  bgShow">
				<img class="img-fluid bgShow" src="{{ asset("images/"~trick.image[0].source) }}" alt="Responsive image">
			<div>
			{% else %}
			<div class="col-1 text-center bgShow">
				<img class="img-fluid bgShow" src="{{ asset("/images/bgDefault.jpg") }}" alt="Responsive image">
			</div>
			{% endif %}
		
		
		<div class="col-12 text-right">
			<a href="{{ path('trick_edit', {'slug': trick.slug}) }}" class="btn btn-primary">
				<i class="fas fa-edit"></i>
			</a>
			<a href="{{ path('trick_delete', {'id': trick.id}) }}" class="btn btn-danger">
				<i class="far fa-trash-alt"></i>
			</a>
		</div>

		<div class="col-12 text-center">
			<h1>{{ trick.name }}</h1>
		</div>

</div>